{
    "name": "standard-wordpress",
    "license": "proprietary",
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "type": "webroot",
                "version": "4.2.2",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.2.2.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.0.0"
                }
            }
        },
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4.0",

        "wordpress": "4.2.2",
        "wpackagist-plugin/timber-library": "~0.21",
        "wpackagist-plugin/simple-fields": "~1.4",
        "wpackagist-theme/twentyeleven": "*"
    },
    "require-dev": {
        "behat/behat": "~3.0",
        "behat/mink-extension": "~2.0",
        "behat/mink-browserkit-driver": "~1.2"
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "": "src/themes/"
        }
    },
    "extra": {
        "webroot-dir": "core",
        "webroot-package": "wordpress",
        "installer-paths": {
            "src/plugins/{$name}/": ["type:wordpress-plugin"],
            "src/themes/{$name}/": ["type:wordpress-theme"]
        }
    }
}
