{
    "name": "lin3s/wordpress-standard",
    "description": "The \"Wordpress Standard Edition\" distribution in the LIN3S way",
    "keywords": ["lin3s", "wordpress", "standard"],
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "LIN3S",
            "email": "info@lin3s.com",
            "homepage": "https://lin3s.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php":                                            "^5.5|^7.0",

        "johnpbloch/wordpress":                           "^4.4",
        "lin3s/cs":                                       "^0.3.6",
        "lin3s/lin3s-distribution":                       "^1.2.1",
        "lin3s/wp-foundation":                            "^1.3.4",
        "lin3s/wp-routing":                               "^1.0.3",
        "lin3s/template-selector":                        "^1.0",

        "wpackagist-plugin/timber-library":               "~0.22",
        "wpackagist-plugin/wordpress-seo":                "^2.2",
        "wpackagist-theme/twentyfifteen":                 "*"
    },
    "require-dev": {
        "symfony/var-dumper":                             "^3.0",
        "wpackagist-plugin/debug-bar":                    "~0.8",
        "wpackagist-plugin/debug-bar-timber":             "~0.3",
        "wpackagist-plugin/monkeyman-rewrite-analyzer":   "^1.0",
        "wpackagist-plugin/plugin-profiler":              "^1.0",
        "wpackagist-plugin/query-monitor":                "^2.8"
    },
    "scripts": {
        "post-install-cmd": [
            "LIN3S\\Distribution\\Composer\\Wordpress::installRequiredFiles",
            "LIN3S\\CS\\Composer\\Hooks::buildDistFile",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "LIN3S\\CS\\Composer\\Hooks::addHooks",
            "LIN3S\\CS\\Composer\\Hooks::addFiles"
        ],
        "post-update-cmd": [
            "LIN3S\\Distribution\\Composer\\Wordpress::installRequiredFiles",
            "LIN3S\\CS\\Composer\\Hooks::buildDistFile",
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "LIN3S\\CS\\Composer\\Hooks::addHooks",
            "LIN3S\\CS\\Composer\\Hooks::addFiles"
        ]
    },
    "config": {
        "bin-dir": "bin/"
    },
    "autoload": {
        "psr-4": {
            "WordpressStandard\\": "src/themes/WordpressStandard/"
        }
    },
    "suggest": {
        "sitepress-multilingual-cms": "It allows to implement the multilingual in an easy way",
        "wpml-media": "It allows to implement the multilingual in an easy way",
        "wpml-string-translation": "It allows to implement the multilingual in an easy way",
        "wpackagist-plugin/categories-images": "It allows to assign easily images to categories",
        "wpackagist-plugin/contact-form-7": "It allows to manage the contact form without code, all inside WP panel",
        "wpackagist-plugin/contact-form-7-to-database-extension": "It allows to save contact forms to database",
        "wpackagist-plugin/advanced-custom-fields": "It allows customize the fields of post types in an easy way"
    },
    "extra": {
        "wordpress-install-dir": "core",
        "installer-paths": {
            "src/plugins/{$name}/": ["type:wordpress-plugin"],
            "src/themes/{$name}/": ["type:wordpress-theme"],
            "src/mu-plugins/{$name}/": ["type:wordpress-muplugin"]
        },
        "incenteev-parameters": {
            "file": ".lin3s_cs.yml",
            "dist-file": ".lin3s_cs.yml.dist"
        }
    }
}
